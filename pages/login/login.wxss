/**login.wxss**/

.container {
  text-align: center;
}

.main {
  text-align: left;
}

.option {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 80rpx 40rpx 0;
}

.option-box {
  width: 600rpx;
  height: 90rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx 0 25rpx;
  background: #1B1B1B;
  border-radius: 20rpx;
}

.option-text {
  color: #fff;
  line-height: 90rpx;
}

.icon-qr {
  width: 56rpx;
  height: 56rpx;
  margin-left: 45rpx;
}

.icon-nextStep {
  width: 171rpx;
  height: 171rpx;
  margin-top: 300rpx;
}

.icon-downMore {
  width: 30rpx;
  height: 15rpx;
}

.drop-down {
  margin: 20rpx 65rpx 0;
  display: flex;
  flex-direction: column;
}

.menu-item {
  padding: 18rpx 0;
}