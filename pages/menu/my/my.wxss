/* pages/my/my.wxss */

.container {
    margin: 0 25rpx;
}

.bg-black {
    background: #1B1B1B;
    border-radius: 20rpx;
    margin-bottom: 22rpx;
}

.h140 {
    height: 140rpx;
}

.h112 {
    height: 112rpx;
}

.item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 27rpx;
}

.line {
    margin: 0 27rpx;
    height: 1rpx;
    background: #fff;
    opacity: 0.1;
}

.value {
    display: flex;
    align-items: center;
}

.avatar {
    width: 98rpx;
    height: 98rpx;
    border-radius: 50%;
}

.value-text {
    margin-right: 38rpx;
}

.icon-right {
    width: 18rpx;
    height: 35rpx;
}

.transform-btn {
    position: relative;
    margin-top: 20rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
}

.transform-btn image {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    z-index: -1;
}

.transform-btn text {
    background-image: -webkit-linear-gradient(45deg, #FB61C6 0%, #FB577B 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    letter-spacing: 0.6rem;
    text-indent: 0.6rem;
}

.tips {
    margin-top: 20rpx;
    color: #999;
    padding-left: 40rpx;
}