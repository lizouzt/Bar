/* pages/my/my.wxss */

.main {
    margin: 50rpx 25rpx 0;
}

.bg-black {
    background: #1B1B1B;
    border-radius: 20rpx;
    margin-bottom: 22rpx;
}

.h140 {
    height: 140rpx;
}

.h112 {
    height: 112rpx;
}

.item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 27rpx;
}

.line {
    margin: 0 27rpx;
    height: 1rpx;
    background: #fff;
    opacity: 0.1;
}

.value {
    display: flex;
    align-items: center;
}

.avatar {
    width: 98rpx;
    height: 98rpx;
}

.icon-right {
    width: 18rpx;
    height: 35rpx;
    margin-left: 37rpx;
}

.save-btn {
    height: 90rpx;
    margin-top: 62rpx;
    background: linear-gradient(45deg, #FB61C6, #FB577B);
    border-radius: 20rpx;
    line-height: 90rpx;
    text-align: center;
    letter-spacing: 2rem;
    text-indent: 2rem;
}