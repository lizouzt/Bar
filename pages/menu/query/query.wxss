/* pages/query/query.wxss */

.topTab {
    margin: 0 54rpx;
    display: flex;
    border: #FB61C6 2rpx solid;
    border-radius: 10rpx;
}

.tab {
    flex: 1;
    text-align: center;
    border-radius: 10rpx;
    padding: 15rpx 0;
}

.active {
    background: linear-gradient(45deg, #FB577B, #FB61C6);
}

.giftList {
    margin: 50rpx 43rpx 0;
}

.gift-item {
    margin-bottom: 40rpx;
    display: flex;
    justify-content: space-between;
}

.userInfo {
    display: flex;
    align-items: center;
}

.user-avatar {
    width: 106rpx;
    height: 106rpx;
    border-radius: 50%;
    overflow: hidden;
}

.user-image {
    width: 100%;
    height: 100%;
}

.user-text {
    margin-left: 24rpx;
}

.user-name {
    margin-bottom: 11rpx;
}

.gift {
    line-height: 106rpx;
}

.price {
    margin-left: 36rpx;
    font-weight: bold;
}

.symbol {
    color: #FB61C6;
}

.number {
    color: #FC0C41;
}