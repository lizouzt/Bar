/* pages/menu/withdrawal/withdrawal.wxss */

.title {
    margin-top: 50rpx;
    text-align: center;
    font-weight: 400;
}

.option1, .option2 {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
}

.option1 .value {
    margin-left: 20rpx;
}

.option1 {
    margin-top: 70rpx;
}

.option2 {
    margin-top: 32rpx;
}

.option2 .value {
    width: 132rpx;
    box-sizing: border-box;
    height: 42rpx;
    border: 1rpx solid #fff;
    padding: 0 10rpx;
    border-radius: 10rpx;
}

.tips {
    width: 275rpx;
    margin: 34rpx auto 0;
    opacity: 0.46;
}

.tips-title {
    margin-bottom: 9rpx;
}

.btn-container {
    display: flex;
    justify-content: space-between;
    margin: 70rpx auto 0;
    text-align: center;
    height: 57rpx;
    line-height: 57rpx;
    width: 334rpx;
}

.confirm, .cancel {
    width: 154rpx;
    position: relative;
}

.confirm image, .cancel image {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    z-index: -1;
}

.cancel-text {
    background-image: -webkit-linear-gradient(45deg, #FB61C6 0%, #FB577B 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
}

.bottom {
    margin-top: 264rpx;
    /* background: #f30; */
}

.bottom-title {
    width: 155rpx;
    height: 47rpx;
    margin-left: 50rpx;
    text-align: center;
    position: relative;
}

.title-image {
    width: 100%;
    height: 20rpx;
    position: absolute;
    left: 0;
    bottom: 0;
    z-index: -1;
}

.title-text {
    z-index: 9;
}

.record {
    height: 360rpx;
    margin-top: 60rpx;
    width: auto;
}

.record-item {
    opacity: 0.46;
    display: flex;
    justify-content: space-around;
    margin-bottom: 36rpx;
}

.more-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.icon-downMore {
    width: 22rpx;
    height: 24rpx;
    margin-bottom: 20rpx;
}